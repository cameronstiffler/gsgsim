{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gsgsim.dev/schemas/deck.schema.json",
  "title": "Goon Squad Galaxy Deck (Strict)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "faction",
    "goons"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "faction": {
      "type": "string",
      "enum": [
        "NARC",
        "PCU"
      ]
    },
    "goons": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/Goon"
      }
    }
  },
  "$defs": {
    "Rank": {
      "type": "string",
      "enum": [
        "SL",
        "SG",
        "BG",
        "T"
      ]
    },
    "CostNumber": {
      "oneOf": [
        {
          "type": "integer",
          "minimum": 0
        },
        {
          "type": "string",
          "const": "X"
        }
      ]
    },
    "DeployCost": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "wind",
        "gear",
        "meat"
      ],
      "properties": {
        "wind": {
          "$ref": "#/$defs/CostNumber"
        },
        "gear": {
          "$ref": "#/$defs/CostNumber"
        },
        "meat": {
          "$ref": "#/$defs/CostNumber"
        }
      }
    },
    "AbilityCost": {
      "$ref": "#/$defs/DeployCost"
    },
    "EffectType": {
      "type": "string",
      "enum": [
        "alter_wind",
        "destroy",
        "disable_abilities",
        "disable_contribution",
        "prevent_unwind",
        "cannot_be_targeted",
        "must_be_destroyed_first",
        "redirect_damage",
        "destroy_self_if_target_destroyed",
        "enable_contribution",
        "resurrect_from_dead_pool",
        "no_unwind",
        "retire_on_destroy",
        "return_to_hand_on_destroy",
        "search_deck",
        "grant_followup_on_destroy",
        "must_attack",
        "draw_cards",
        "destroy_attacker_on_destroy",
        "grant_resist",
        "copy_and_cast_target_ability",
        "banish_from_dead_pool",
        "mark_target",
        "increase_damage_taken",
        "reduce_cost_for_cards_against_marked",
        "enable_double_use_against_target",
        "conditional_cannot_be_targeted_by_negative_effects"
      ]
    },
    "TargetToken": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "self",
            "any",
            "ally_all",
            "opponent_all",
            "ally_all_except:self",
            "all_opponent_playergoons",
            "x_goons",
            "two_goons",
            "goon_using_ability",
            "dead_pool",
            "revived_by_self",
            "three_goons",
            "marked"
          ]
        },
        {
          "type": "string",
          "pattern": "^card_name:.+"
        }
      ]
    },
    "DurationToken": {
      "type": "string",
      "enum": [
        "instant",
        "until_end_of_turn",
        "next_turn",
        "next_unwind",
        "next_unwind_if_damaged_this_turn",
        "one_shot_trigger",
        "persistent"
      ]
    },
    "Effect": {
      "type": "object",
      "required": [
        "effect_type"
      ],
      "additionalProperties": false,
      "properties": {
        "effect_type": {
          "$ref": "#/$defs/EffectType"
        },
        "amount": {
          "oneOf": [
            {
              "type": "integer"
            },
            {
              "type": "string",
              "enum": [
                "any",
                "X"
              ]
            }
          ]
        },
        "target": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/TargetToken"
          }
        },
        "duration": {
          "$ref": "#/$defs/DurationToken"
        },
        "value": {
          "type": "string"
        }
      }
    },
    "DeployRequirementType": {
      "type": "string",
      "enum": [
        "requires_card_in_play",
        "requires_rank_in_play",
        "requires_faction",
        "requires_unique_in_play",
        "text"
      ]
    },
    "Requirement": {
      "type": "object",
      "required": [
        "type"
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "$ref": "#/$defs/DeployRequirementType"
        },
        "card_name": {
          "type": "string"
        },
        "side": {
          "type": "string",
          "enum": [
            "self",
            "opponent"
          ]
        },
        "count": {
          "type": "integer",
          "minimum": 0
        },
        "value": {
          "type": "string"
        }
      }
    },
    "Ability": {
      "type": "object",
      "required": [
        "name",
        "cost",
        "passive",
        "must_use",
        "text",
        "effects"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "cost": {
          "$ref": "#/$defs/AbilityCost"
        },
        "passive": {
          "type": "boolean"
        },
        "must_use": {
          "type": "boolean"
        },
        "text": {
          "type": "string"
        },
        "effects": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Effect"
          }
        }
      }
    },
    "Goon": {
      "type": "object",
      "required": [
        "name",
        "rank",
        "duplicates",
        "faction",
        "deploy_cost",
        "biological",
        "mechanical",
        "resist",
        "no_unwind",
        "abilities"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "rank": {
          "$ref": "#/$defs/Rank"
        },
        "duplicates": {
          "type": "integer",
          "minimum": 1
        },
        "faction": {
          "type": "string",
          "enum": [
            "NARC",
            "PCU"
          ]
        },
        "deploy_cost": {
          "$ref": "#/$defs/DeployCost"
        },
        "biological": {
          "type": "boolean"
        },
        "mechanical": {
          "type": "boolean"
        },
        "resist": {
          "type": "boolean"
        },
        "no_unwind": {
          "type": "boolean"
        },
        "deploy_requirements": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Requirement"
          }
        },
        "abilities": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Ability"
          }
        },
        "notes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "flavor_text": {
          "type": "string"
        },
        "image_url_full": {
          "type": "string"
        },
        "image_url_mini": {
          "type": "string"
        }
      }
    }
  }
}
